---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

// Define the properties for the layout
export interface Props {
  title: string;
  description: string;
  image?: string; // Optional: an image for social media previews
}

const {
  title,
  description,
  image = "/social-preview.png", // A default fallback image
} = Astro.props;

// Get the canonical URL for the current page
const canonicalURL = Astro.url.href;
const socialImageURL = new URL(image, Astro.site).href;

const siteName = "Spruce Emmanuel"; // Change this to your site's name
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon/favicon.ico" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="mask-icon"
      href="/favicon/safari-pinned-tab.svg"
      color="#000000"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#ffffff"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#111111"
    />
    <meta name="color-scheme" content="light dark" />

    <link rel="manifest" href="/favicon/site.webmanifest" />

    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />

    {/* --- SEO and Social Meta Tags --- */}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    <meta name="twitter:creator" content="@sprucekhalifa" />
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: siteName,
        url: Astro.site,
        description: description,
      })}
    />

    <script is:inline>
      const theme = (() => {
        // We check for a saved theme in localStorage first.
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        // If no saved theme, we check the user's OS preference.
        if (window.matchMedia("(prefers-color-scheme: light)").matches) {
          return "light-theme";
        }
        // Default to dark theme.
        return "dark-theme";
      })();

      // Apply the determined theme to the <html> element.
      document.documentElement.className = theme;
    </script>

    {/* Your existing font styles */}
    <style>
      @font-face {
        font-style: normal;
        font-family: "HEX Franklin";
        font-display: swap;
        src: url(../assets/fonts/HEX_Franklin_v0.3_Variable.woff2);
      }
      @font-face {
        font-style: normal;
        font-family: "MonoLisa";
        font-display: swap;
        src: url(../assets/fonts/MonoLisaVariableNormal.woff2);
      }
      @font-face {
        font-style: normal;
        font-family: "Grotesk";
        font-display: swap;
        src: url(../assets/fonts/LabilGrotesk-Regular.woff2);
      }
      @font-face {
        font-style: normal;
        font-family: "Grotesk Bold";
        font-display: swap;
        src: url(../assets/fonts/LabilGrotesk-Bold.woff2);
      }
      body {
        font-family: "HEX Franklin", "_font_fallback_1709097970291", sans-serif;
      }
      :root {
        --font-sans: "HEX Franklin", "_font_fallback_1709097970291", sans-serif;
        --font-grotesk: "Grotesk Bold";
      }
      @font-face {
        font-family: "_font_fallback_1709097970291";
        size-adjust: 106.95%;
        src: local("Arial");
        ascent-override: 88.83%;
        descent-override: 18.7%;
        line-gap-override: 0%;
      }
      code {
        font-family: "MonoLisa", "_font_fallback_1207693654576", monospace;
      }
      :root {
        --font-mono: "MonoLisa", "_font_fallback_1207693654576", monospace;
      }
      @font-face {
        font-family: "_font_fallback_1207693654576";
        size-adjust: 114.37%;
        src: local("Courier New");
        ascent-override: 92.68%;
        descent-override: 27.98%;
        line-gap-override: 0%;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      /* Add a subtle transition for dark mode */
      body,
      header,
      footer {
        transition:
          background-color 0.3s ease,
          color 0.3s ease;
      }
    </style>
  </body>
</html>
