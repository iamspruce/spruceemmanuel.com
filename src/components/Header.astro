---
import Divider from "./Divider.astro";
import Logo from "./Logo.astro";
---

<header>
  <a href="/" class="logo">
    <span class="visually-hidden">Spruce Emmanuel</span>
    <Logo />
  </a>
  <nav>
    <!-- Standalone button for desktop -->
    <a href="mailto:hello@example.com" class="cta-button desktop-only-cta">
      Let's talk
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    </a>

    <!-- The menu toggle button, always visible -->
    <button class="menu-toggle-button" aria-label="Toggle Menu">
      <span>Menu</span>
      <svg
        class="icon-menu"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M3 12h18M3 6h18M3 18h18"></path>
      </svg>
      <svg
        class="icon-close"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M18 6L6 18M6 6l12 12"></path>
      </svg>
    </button>

    <!-- The dropdown menu -->
    <div class="nav-menu">
      <ul>
        <li><a href="https://github.com/iamspruce">Work</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/journal">Journal</a></li>
      </ul>
      <!-- The same button, but only for mobile view -->
      <a
        href="mailto:hello@spruceemmanuel.com"
        class="cta-button mobile-only-cta"
      >
        <span>Let's talk</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </nav>
  <Divider variant="bold" speed="fast" />
</header>

<style>
  header {
    width: 100%;
    position: sticky;
    top: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2xs);
    padding-block: var(--space-3xs);
    padding-inline: var(--space-2xs);
    background-color: var(--gray-1);
  }

  .logo {
    width: calc(var(--space-3xl) * 1.2);
    height: auto;
    pointer-events: auto;
  }

  /* --- Navigation Container --- */
  nav {
    position: relative;
    transform: rotate(3deg);
    display: flex;
    align-items: center;
    gap: var(--space-2xs);
  }

  /* --- General Button/Link Styles --- */
  .cta-button,
  .menu-toggle-button {
    all: unset;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-1);
    line-height: 1;
    font-weight: var(--font-weight-bold);
    pointer-events: auto;
    font-feature-settings: var(--font-unstable);
    cursor: pointer;
    background: var(--gray-12);
    gap: var(--space-3xs);

    border-radius: var(--radius-full);
    transition: background-color 0.2s ease-in-out;
    z-index: 1001;
  }

  .cta-button {
    padding: var(--space-2xs) var(--space-xs);
    text-decoration: none;
  }

  .menu-toggle-button {
    padding: var(--space-2xs) var(--space-xs);
    position: relative;
  }

  .cta-button:hover,
  .menu-toggle-button:hover {
    background: var(--gray-12);
  }

  .menu-toggle-button svg {
    transition:
      transform 0.3s cubic-bezier(0.25, 1, 0.5, 1),
      opacity 0.2s;
  }

  /* --- Icon States (Hamburger and Close) --- */
  .icon-close {
    transform: rotate(-90deg) scale(0.7);
    display: none;
  }

  nav.is-open .icon-menu {
    transform: rotate(90deg) scale(0.7);
    display: none;
  }

  nav.is-open .icon-close {
    transform: rotate(0deg) scale(1);
    display: block;
  }

  /* --- Dropdown Menu Styles --- */
  .nav-menu {
    position: absolute;
    top: calc(100% + var(--space-s));
    right: 0;
    background: var(--gray-12);
    border-radius: var(--radius-m);
    padding: var(--space-s);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    min-width: calc(var(--space-2xl) * 3);
    opacity: 0;
    visibility: hidden;
    transform-origin: top right;
    transform: scale(0.95) translateY(-10px);
    transition:
      opacity 0.2s ease-in-out,
      visibility 0.2s ease-in-out,
      transform 0.2s ease-in-out;
  }

  nav.is-open .nav-menu {
    opacity: 1;
    visibility: visible;
    transform: scale(1) translateY(0);
    z-index: 10002;
  }

  .nav-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .nav-menu a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3xs) var(--space-2xs);
    text-decoration: none;
    color: var(--gray-8);
    font-weight: var(--font-weight-bold);
    border-radius: var(--radius-m);
    transition: all 0.2s ease-in-out;
    text-align: center;
  }

  .nav-menu a:hover {
    background: var(--gray-1);
    color: var(--gray-12);
  }

  .nav-menu .cta-button {
    background: var(--gray-1);
    color: var(--gray-12);
  }
  .nav-menu .cta-button:hover {
    background: var(--gray-1);
  }

  /* --- Responsive Logic --- */
  .mobile-only-cta {
    display: none; /* Hidden by default */
  }

  /* On screens 768px or less */
  @media (max-width: 768px) {
    .desktop-only-cta {
      display: none !important; /* Hide the standalone button in the header */
    }
    .mobile-only-cta {
      display: flex; /* Show the button inside the menu */
      align-items: center;
      justify-content: center;
    }
  }

  /* On screens larger than 768px */
  @media (min-width: 769px) {
    .mobile-only-cta {
      display: none; /* Hide the button inside the menu */
    }
  }
</style>

<script>
  // --- JavaScript for Toggle Functionality ---
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.querySelector(".menu-toggle-button");
    const nav = document.querySelector("nav");

    if (menuButton && nav) {
      menuButton.addEventListener("click", () => {
        nav.classList.toggle("is-open");
      });
    }
  });
</script>
