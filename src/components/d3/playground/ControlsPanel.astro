---
export interface Props {
  controls: string;
  playgroundId: string;
}

const { controls, playgroundId } = Astro.props;
---

<div class="playground-controls" data-playground-id={playgroundId}>
  <div class="controls-wrapper" set:html={controls} />
</div>

<style>
  .playground-controls {
    padding: var(--space-s);
    border: 2px solid var(--mauve-3);
    background: var(--mauve-1);
    color: var(--mauve-12);
    margin-block-start: var(--space-3xs);
  }

  .controls-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    align-items: center;
  }

  /* Responsive layout */
  @media (max-width: 640px) {
    .controls-wrapper {
      flex-direction: column;
      align-items: stretch;
    }

    :global(.playground-controls label) {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
